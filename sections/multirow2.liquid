{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{%- capture block_heading_styles -%}
    --font-size: {{ section.settings.heading_fs }}px;
    --font-size-mobile: {{ section.settings.heading_fs_mobile }}px;
    --line-height: {{ section.settings.heading_lh }};
    --padding-bottom: {{ section.settings.heading_pb }}px;
    --padding-bottom-mobile: {{ section.settings.heading_pb_mobile }}px;
{%- endcapture -%}
{%- capture block_text_styles -%}
    --font-size: {{ section.settings.text_fs }}px;
    --font-size-mobile: {{ section.settings.text_fs_mobile }}px;
    --line-height: {{ section.settings.text_lh }};
{%- endcapture -%}
{%- capture block_caption_styles -%}
    --font-size: {{ section.settings.caption_fs }}px;
    --font-size-mobile: {{ section.settings.caption_fs_mobile }}px;
    --line-height: {{ section.settings.caption_lh }};
{%- endcapture -%}

{%- style -%}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    .section-{{ section.id }} h2,
    .section-{{ section.id }} h3,
    .section-{{ section.id }} h4,
    .section-{{ section.id }} p {
        margin: 0;
    }
    .section-{{ section.id }} .multirow__inner {
        row-gap: {{ section.settings.block_gap_mobile }}px;
    }
    .section-{{ section.id }} .image-with-text .grid {
        gap: {{ section.settings.block_grid_gap_mobile}}px;
    }
    .section-{{ section.id }} .image-with-text__content {
        padding: 0;
    }
    .section-{{ section.id }} .image-with-text__media {
        max-width: {{ section.settings.image_width_mobile }};
        height: {{ section.settings.image_height_mobile }};
    }
    .section-{{ section.id }} .media {
        background: unset;
    }
    .section-{{ section.id }} .media>img {
        object-fit: contain;
        object-position: left top;
    }
    .section-{{ section.id }} .image-with-text__text,
    .section-{{ section.id }} .image-with-text__heading {
        font-size: var(--font-size-mobile);
        line-height: var(--line-height);
        padding-bottom: var(--padding-bottom-mobile);
    }
    .section-{{ section.id }} .image-with-text__text--caption {
        letter-spacing: normal;
        margin-top: 70px;
    }
    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top }}px;
            padding-bottom: {{ section.settings.padding_bottom }}px;
        }
        .section-{{ section.id }} .multirow__inner {
            row-gap: {{ section.settings.block_gap }}px;
        }
        .section-{{ section.id }} .image-with-text .grid {
            gap: {{ section.settings.block_grid_gap}}px;
        }
        .section-{{ section.id }} .image-with-text:not(:last-child) .image-with-text__text-item {
            border-bottom: 1px solid #D0B386;
        }
        .section-{{ section.id }} .grid__item.image-with-text__media-item {
            width: calc( 45% - {{ section.settings.block_grid_gap}}px );
        }
        .section-{{ section.id }} .grid__item.image-with-text__text-item {
            width: 55%;
        }
        .section-{{ section.id }} .image-with-text__media {
            max-width: {{ section.settings.image_width }};
            height: {{ section.settings.image_height }};
        }
        .section-{{ section.id }} .image-with-text__text,
        .section-{{ section.id }} .image-with-text__heading {
            font-size: var(--font-size);
            padding-bottom: var(--padding-bottom);
        }
        .section-{{ section.id }} .image-with-text__text--caption {
            border-top: 1px solid #D0B386;
            margin-top: 30px;
            padding-top: 31px;
        }
    }
{%- endstyle -%}

{%- liquid
  if section.settings.image_layout contains 'right'
    assign odd_class = ' image-with-text__grid--reverse'
  else
    assign even_class = ' image-with-text__grid--reverse'
  endif

  if section.settings.row_color_scheme == section.settings.section_color_scheme
    assign no_content_background = true
  endif

  if settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0
    assign no_content_styles = true
  endif

  if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0
    assign borders_class = ' collapse-borders'
  endif

  if no_content_background and no_content_styles
    assign padding_class = ' collapse-padding'
  endif

  unless no_content_background and no_content_styles
    assign corners_class = ' collapse-corners'
  endunless
-%}

<div class="multirow section-{{ section.id }} section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="multirow__inner page-width">
    <h2 class="multirow__heading inline-richtext font-weight-semibold {{ section.settings.heading_size }} {{ section.settings.heading_alignment }}">
        {{ section.settings.heading }}
    </h2>
    {%- for block in section.blocks -%}
      <div
        class="image-with-text isolate gradient color-{{ section.settings.row_color_scheme }} {{ borders_class }}{{ corners_class }}{{ padding_class }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {{ block.shopify_attributes }}
      >
        <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.image_layout contains 'alternate' %}{% cycle odd_class, even_class %}{% else %}{{ odd_class }}{% endif %}">
          <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
            {%- if block.settings.heading -%}
                <h3 class="image-with-text__heading rte" style="{{ block_heading_styles }}">
                    {{ block.settings.heading }}
                </h3>
            {%- endif -%}
            <div
              class="image-with-text__media  {% if block.settings.image != blank %} media{% else %} image-with-text__media--placeholder placeholder{% endif %}"
            >
              {%- if block.settings.image != blank -%}
                {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                  (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                {%- endcapture -%}
                {{
                  block.settings.image
                  | image_url: width: 1500
                  | image_tag: sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
                }}
              {%- else -%}
                {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>
          </div>
          <div class="image-with-text__text-item grid__item">
            <div class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} pt-0 pb-0  content-container{% unless no_content_background and no_content_styles %} gradient color-{{ section.settings.row_color_scheme }}{% else %} background-transparent{% endunless %}">
              {%- if block.settings.text -%}
                <div class="image-with-text__text rte" style="{{block_text_styles}}">{{ block.settings.text }}</div>
              {%- endif -%}
                {%- if block.settings.caption -%}
                <div
                    class="image-with-text__text image-with-text__text--caption" style="{{ block_caption_styles }}">
                    {{ block.settings.caption }}
                </div>
                {%- endif -%}
              {%- if block.settings.button_label != blank -%}
                <a
                  {% if block.settings.button_link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link }}"
                  {% endif %}
                  class="button button--{{ section.settings.button_style }}"
                >
                  {{ block.settings.button_label | escape }}
                </a>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

